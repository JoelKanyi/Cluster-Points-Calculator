<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/instructs"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Spinner
            android:id="@+id/spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            app:layout_constraintEnd_toEndOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/subject1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Math A/ Math B"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject2"
            app:layout_constraintEnd_toEndOf="@+id/spinner"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/spinner"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <Spinner
            android:id="@+id/subj1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject2"
            app:layout_constraintEnd_toEndOf="@+id/subject1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/subject1"
            app:layout_constraintTop_toBottomOf="@+id/subject1" />

        <TextView
            android:id="@+id/subject2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Math A/ Math B"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject3"
            app:layout_constraintEnd_toEndOf="@+id/subj1"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/subj1"
            app:layout_constraintTop_toBottomOf="@+id/subj1" />

        <Spinner
            android:id="@+id/subj2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject3"
            app:layout_constraintEnd_toEndOf="@+id/subject2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/subject2"
            app:layout_constraintTop_toBottomOf="@+id/subject2" />

        <TextView
            android:id="@+id/subject3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Math A/ Math B"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject4"
            app:layout_constraintEnd_toEndOf="@+id/subj2"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/subj2"
            app:layout_constraintTop_toBottomOf="@+id/subj2" />

        <Spinner
            android:id="@+id/subj3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/subject4"
            app:layout_constraintEnd_toEndOf="@+id/subject3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/subject3"
            app:layout_constraintTop_toBottomOf="@+id/subject3" />

        <TextView
            android:id="@+id/subject4"
            android:layout_width="0dp"
            android:layout_height="19dp"
            android:text="Math A/ Math B"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/calculate"
            app:layout_constraintEnd_toEndOf="@+id/subj3"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/subj3"
            app:layout_constraintTop_toBottomOf="@+id/subj3" />

        <Spinner
            android:id="@+id/subj4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/spinner_border"
            android:textColor="#000"
            app:layout_constraintBottom_toTopOf="@+id/calculate"
            app:layout_constraintEnd_toEndOf="@+id/subject4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/subject4"
            app:layout_constraintTop_toBottomOf="@+id/subject4" />

        <Button
            android:id="@+id/calculate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/sign_up_box"
            android:text="@string/calculate"
            android:textColor="#fff"
            app:layout_constraintEnd_toEndOf="@+id/subj4"
            app:layout_constraintStart_toStartOf="@+id/subj4"
            app:layout_constraintTop_toBottomOf="@+id/subj4" />

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Points are : 34.789"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/calculate"
        app:layout_constraintStart_toStartOf="@+id/calculate"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


